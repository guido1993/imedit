<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:panels="using:Imedit.Views.Panels">

    <Color x:Key="PageHeaderDefaultColor">#E6E6E6</Color>
    <Color x:Key="CommandBarDefaultColor">#E6E6E6</Color>
    <Color x:Key="FullEditorPaneDefaultColor">#CAC8C8</Color>

    <SolidColorBrush x:Key="PageHeaderDefaultBrush" Color="{StaticResource PageHeaderDefaultColor}" />
    <SolidColorBrush x:Key="CommandBarDefaultBrush" Color="{StaticResource CommandBarDefaultColor}" />
    <SolidColorBrush x:Key="FullEditorPanelDefaultBrush" Color="{StaticResource FullEditorPaneDefaultColor}" />

    <Style TargetType="CommandBar">
        <Setter Property="Background" Value="{StaticResource CommandBarDefaultBrush}" />
    </Style>

    <Style TargetType="panels:FullEditorPane">
        <Setter Property="Background" Value="{StaticResource FullEditorPanelDefaultBrush}" />
    </Style>

    <Style TargetType="panels:PageHeader">
        <Setter Property="Background" Value="{StaticResource PageHeaderDefaultBrush}" />
    </Style>
</ResourceDictionary>
